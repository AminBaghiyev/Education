@model NewsCreateDTO
@{
    SelectList categories = ViewData["Categories"] as SelectList;
}

<form asp-action="Create" class="container" method="POST" enctype="multipart/form-data">
    <h2 class="my-4">Create News</h2>
    <div class="mb-3">
        <label class="form-label" asp-for="Title"></label>
        <input class="form-control" asp-for="Title" />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Thumbnail"></label>
        <input class="form-control" asp-for="Thumbnail" />
        <span class="text-danger" asp-validation-for="Thumbnail"></span>
    </div>
    <div class="mb-3">
        <select class="form-control" asp-for="CategoryId" asp-items="categories">
            <option selected>Select Category</option>
        </select>
        <span class="text-danger" asp-validation-for="CategoryId"></span>
    </div>
    <p class="text-danger text-center">@Html.ValidationMessage("CustomError")</p>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>